/* index */
.index-search{padding:20rpx 0 40rpx 0;background-color:#fff;}
.index-search .index-logo{display:block;width:320rpx;height:100rpx;margin:0 auto 80rpx auto;}
.index-search .search-cont{margin:0 30rpx;padding:10rpx;border-radius:10rpx;border:1px solid #ccc;}
.index-search .search-input{height:60rpx;padding-left:10rpx;padding-right:120rpx;}
.index-search .text{display:block;width:100%;height:100%;font-size:28rpx;line-height:60rpx;color:#999;}
.index-search .submit{display:block;float:right;width:120rpx;height:60rpx;padding:10rpx 0;font-size:40rpx;border-radius:10rpx;background-color:#eee;}